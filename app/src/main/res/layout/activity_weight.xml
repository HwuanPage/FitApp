<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeightActivity">

    <TextView
        android:id="@+id/WeightText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="00.0kg"
        android:textAlignment="center"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231"
        tools:layout_editor_absoluteX="0dp"></TextView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/SetBtn"
        app:layout_constraintTop_toBottomOf="@+id/WeightText">

        <TableRow>

            <TextView
                android:layout_weight="1"
                android:text="키"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:layout_weight="1"
                android:text="근육량"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:layout_weight="1"
                android:text="체지방량"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:layout_weight="1"
                android:text="기초대사량"
                android:textAlignment="center"
                android:textSize="18dp" />
            <TextView
                android:layout_weight="1"
                android:text="성별"
                android:textAlignment="center"
                android:textSize="18dp" />
        </TableRow>

        <TableRow android:layout_height="wrap_content">

            <TextView
                android:id="@+id/heightText"
                android:layout_weight="1"
                android:hint="00.0cm"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/MuscleText"
                android:layout_weight="1"
                android:hint="00.0kg"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/FatText"
                android:layout_weight="1"
                android:hint="00.0kg"
                android:textAlignment="center"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/BMRText"
                android:layout_weight="1"
                android:hint="00kcal"
                android:textAlignment="center"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/SexText"
                android:layout_weight="1"
                android:hint=""
                android:textAlignment="center"
                android:textSize="18dp" />
        </TableRow>
    </TableLayout>
    <Button
        android:id="@+id/SetBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="직접 입력"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WeightText"
        app:layout_constraintVertical_bias="0.948"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>